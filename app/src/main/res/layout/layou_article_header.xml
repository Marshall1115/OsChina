<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_material"
            android:paddingBottom="@dimen/lay_8"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="@dimen/lay_8"
            android:textColor="#111111"
            android:textSize="22sp"
            tools:text="Webpack从零开始" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <net.oschina.app.improve.widget.PortraitView
                android:id="@+id/iv_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/widget_default_face" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        tools:text="年轻的小蜜蜂" />

                    <net.oschina.app.improve.widget.IdentityView
                        android:id="@+id/identityView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lay_4"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6a6a6a"
                        android:textSize="12sp"
                        tools:text="CSDN" />

                    <TextView
                        android:id="@+id/tv_pub_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lay_8"
                        android:layout_marginRight="@dimen/lay_8"
                        android:textColor="#6a6a6a"
                        android:textSize="12sp"
                        tools:text="2016-06-24" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_20"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="@dimen/lay_16"
                android:paddingRight="@dimen/lay_16"
                android:paddingTop="@dimen/lay_12"
                android:textColor="#6a6a6a"
                android:textSize="14sp"
                tools:text="在Google IO大会中不仅仅带来了Android Studio 2.2在Google IO大会中不仅仅带来了Android Studi赖约束的库。在Google IO大会中不仅仅带来了Android Studi赖约束的库。在Google IO大会中不仅仅带来了Android Studi赖约束的库。在Google IO大会中不仅仅带来了Android Studi赖约束的库。在Google IO大会中不仅仅带来了Android Studi赖约束的库。" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="-40dp"
                android:background="@drawable/bg_article"
                android:paddingBottom="@dimen/lay_12"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/btn_read_all"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/lay_16"
                    android:layout_marginRight="@dimen/lay_16"
                    android:background="@drawable/bg_article_detail"
                    android:elevation="0dp"
                    android:outlineProvider="none"
                    android:text="阅读全文"
                    android:textColor="@color/main_green"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop" />

            </FrameLayout>
        </LinearLayout>

        <net.oschina.app.improve.main.synthesize.detail.CommentView
            android:id="@+id/commentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ques_detail_bg_color" />

        <View style="@style/h_line" />

        <TextView
            android:id="@+id/tv_blog_detail_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="相关推荐"
            android:textColor="#9d9d9d"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <View style="@style/h_line" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>