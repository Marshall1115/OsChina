<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:titleTextColor="@color/white"
        app:popupTheme="@style/ToolbarPopupTheme"
        tools:ignore="UnusedAttribute" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/lay_16"
            android:layout_marginRight="@dimen/lay_16"
            android:paddingBottom="@dimen/lay_12"
            android:paddingTop="@dimen/lay_12" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/lay_12"
            android:paddingTop="@dimen/lay_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_16"
                android:layout_marginRight="@dimen/lay_16"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/lay_16"
                    android:layout_marginTop="@dimen/lay_16"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_share_logo_blog" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/list_divider_color" />


                <LinearLayout
                    android:id="@+id/layout_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_material"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <!--portrait and nick-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <net.oschina.app.improve.widget.PortraitView
                            android:id="@+id/iv_portrait"
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48"
                            tools:src="@mipmap/widget_default_face" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#111111"
                                android:textSize="16sp"
                                tools:text="李大神" />

                            <net.oschina.app.improve.widget.IdentityView
                                android:id="@+id/identityView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/lay_4"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--content-->
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="#333"
                        android:textSize="16sp"
                        tools:text="Content" />

                    <net.oschina.app.improve.widget.TweetPicturesLayout
                        android:id="@+id/tweet_pics_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="@dimen/lay_8"
                        android:visibility="gone"
                        app:column="3"
                        app:horizontalSpace="@dimen/lay_4"
                        app:verticalSpace="@dimen/lay_4" />

                    <LinearLayout
                        android:id="@+id/layout_ref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/bg_forward"
                        android:orientation="vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="16dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_ref_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.1"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="14sp"
                            tools:text="Python爬虫使用Selenium+PhantomJS抓取Ajax和动态HTML内容" />

                        <TextView
                            android:id="@+id/tv_ref_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.2"
                            android:maxLines="3"
                            android:textSize="13sp"
                            tools:text="生产环境MySQL快速备份工具XtraBackup使用案例MySQL 的备份有很多种方式，最常用的应该是MySQLdump了，将数据库导出一个 sql文件，还原的时候source db.sql 就欢快的执行了。小伙伴愉快的布上一个shell脚本，配上…" />

                        <net.oschina.app.improve.widget.TweetPicturesLayout
                            android:id="@+id/layout_ref_images"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            app:horizontalSpace="@dimen/lay_4"
                            app:verticalSpace="@dimen/lay_4" />
                    </LinearLayout>

                    <!--bottom info-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="@dimen/lay_8">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            tools:text="6分钟前" />

                        <TextView
                            android:id="@+id/tv_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/lay_8"
                            android:layout_toEndOf="@id/tv_time"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:text="Android"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_thumbup"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/selector_thumb" />

                            <ImageView
                                android:id="@+id/iv_comment"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="12dp"
                                android:contentDescription="@string/app_name"
                                android:src="@mipmap/ic_comment_30" />

                            <ImageView
                                android:id="@+id/iv_dispatch"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="12dp"
                                android:contentDescription="@string/app_name"
                                android:src="@mipmap/ic_forward" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

    <View style="@style/h_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_52"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_material_ripple"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="22dp"
                android:contentDescription="@string/share_to"
                android:src="@mipmap/ic_share_black_normal"
                android:tint="@color/text_title_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_16"
                android:layout_marginRight="@dimen/lay_16"
                android:text="@string/share_to"
                android:textColor="@color/text_title_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_material_ripple"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/share_to"
                android:src="@mipmap/ic_save"
                android:tint="@color/text_title_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_16"
                android:layout_marginRight="@dimen/lay_16"
                android:text="保存"
                android:textColor="@color/text_title_color"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>